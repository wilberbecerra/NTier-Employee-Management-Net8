@model IEnumerable<WB.Entidades.Empleado>

@{
    ViewData["Title"] = "Gestión de Empleados";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-users me-2"></i>Listado de Empleados
                </h4>
                <small class="text-muted">Administración y control de personal</small>
            </div>
            <a asp-action="Crear" class="btn btn-primary shadow-sm">
                <i class="fas fa-user-plus me-1"></i> Nuevo Empleado
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center">ID</th>
                            <th>Información Personal</th>
                            <th>Contacto</th>
                            <th>Puesto / Depto</th>
                            <th class="text-end">Sueldo</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var emp in Model)
                            {
                                <tr>
                                    <td class="text-center fw-bold text-muted">#@emp.IdEmpleado</td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-dark">@emp.Nombres @emp.Apellidos</span>
                                            <span class="badge bg-light text-primary border p-1" style="width: fit-content; font-size: 0.7rem;">
                                                <i class="far fa-calendar-alt me-1"></i>Activo
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="small">
                                            <div class="text-truncate" style="max-width: 150px;">
                                                <i class="far fa-envelope text-muted me-1"></i> @emp.Email
                                            </div>
                                            <div>
                                                <i class="fas fa-phone-alt text-muted me-1"></i> @(emp.Telefono ?? "No asignado")
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold small">@emp.NombreCargo</span>
                                            <span class="text-muted small text-uppercase">@emp.NombreDepartamento</span>
                                        </div>
                                    </td>
                                    <td class="text-end fw-bold text-success">
                                        @emp.Sueldo.ToString("C")
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Editar" asp-route-id="@emp.IdEmpleado"
                                               class="btn btn-sm btn-outline-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Eliminar" asp-route-id="@emp.IdEmpleado"
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('¿Está seguro de dar de baja a este empleado?')" title="Eliminar">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                                    <p>No hay registros disponibles actualmente.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Efecto hover suave para las filas */
    .table-hover tbody tr:hover {
        background-color: rgba(0,123,255,0.03);
        transition: 0.2s;
    }
    /* Estilo de los botones de acción */
    .btn-group .btn {
        padding: 0.4rem 0.6rem;
    }
    /* Bordes redondeados para la tarjeta */
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
</style>