@model WB.Entidades.Empleado
@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark py-3">
            <h4 class="mb-0"><i class="fa-solid fa-user-pen me-2"></i>Editar Información del Empleado</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Editar" method="post" class="row g-3">

                @* --- EL CAMPO MÁS IMPORTANTE --- *@
                @* Este campo es invisible para el usuario, pero le dice al servidor 
                   A QUÉ ID debe aplicarle los cambios en SQL *@
                <input type="hidden" asp-for="IdEmpleado" />

                <div class="col-md-6">
                    <label class="form-label fw-bold">Nombres</label>
                    <input asp-for="Nombres" class="form-control" placeholder="Ej. Juan" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Apellidos</label>
                    <input asp-for="Apellidos" class="form-control" placeholder="Ej. Pérez" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Correo Electrónico</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="nombre@empresa.com" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Sueldo Mensual</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Sueldo" type="number" step="0.01" class="form-control" required />
                    </div>
                </div>

                <div class="col-12 mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-warning px-4 fw-bold">
                        <i class="fa-solid fa-floppy-disk me-1"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>